/* miniprogram/pages/home/index.wxss */

.group-wrapper {
    display: flex;
    /* flex-direction: column; */
    width: 100%;
    border-width: 4rpx 0 4rpx 0;
    border-color: #f1f1f1;
    border-style: solid;
}

.sticky-header {
    background-color: white;
    position: sticky;
    top: 0;
    z-index: 99;
}

.picker-section {
    text-align: left;
}

.picker-section .picker {
    margin-bottom: 20rpx;
}

.picker-result {
    display: inline-block;
    border-radius: 4rpx;
}

.hero-group-item {
    flex: 1;
    padding: 10rpx;
    margin: 0 2rpx;
    text-align: center;
    /* border: 1rpx solid #258DF2; */
    /* border-radius: 10rpx; */
}

.heroDiv {
    position: relative;
    display: flex;
    padding: 0 20rpx 0 20rpx;
    transition-duration: 0s;
    flex-direction: column;
}

.heroImg {
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
    border: 2px solid #258DF2;
    border-radius: 10px 0 10px 0;
}